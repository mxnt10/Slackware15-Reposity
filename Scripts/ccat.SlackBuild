# All rights reserved.

[ $UID != 0 ] && { echo -e "\nExecute como Root !\n"; exit 1; }

PRGNAM=ccat
VERSION=1.1.0
BUILD=${BUILD:-1}
TAG=${TAG:-_mxnt}

case "$( uname -m )" in
	i?86) export ARCH=i586 ;;
	   *) export ARCH=$( uname -m ) ;;
esac

WD=$PWD; mkdir -p $PRGNAM; chown -R 1000:users $PRGNAM; cd $PRGNAM

CWD=$PWD
TMP=/tmp
PKG=$TMP/package-$PRGNAM

set -e
rm -rf $PKG ~/go
mkdir -p $PKG/{install,usr/doc/$PRGNAM-$VERSION}
cd $PKG

go get -u github.com/owenthereal/ccat
mv ~/go/* ./usr
cp -a usr/src/github.com/owenthereal/ccat/{LICENSE,README.md} $PKG/usr/doc/$PRGNAM-$VERSION
chown -R root:root .
chmod -R u+w,go+r-w,a+X-s .

echo "    |-----handy-ruler------------------------------------------------------|
ccat: ccat (cat colorized)
ccat:
ccat: The ccat is the colorizing cat. It works similar to cat but
ccat: displays content with syntax highlighting.
ccat:
ccat:
ccat: https://github.com/owenthereal/ccat
ccat:
ccat:
ccat:
ccat:" > $PKG/install/slack-desc

cd $PKG; /sbin/makepkg -l y -c n $CWD/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.txz
chown -R 1000:users $CWD/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.txz
rm -rf $PKG ~/go

cd $CWD
[ ${TIME:-0} != 0 ] && TIME="-t $TIME" || TIME=
if [ "${INST:-no}" = "yes" ]; then
	OPTION=y
else
	[ -e "../Exclamation.mp3" ] && pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY mplayer $WD/Exclamation.mp3 > /dev/null
	read $TIME -p "O pacote jรก pode ser instalado? (y/n) (default=n)" OPTION
fi
case "$OPTION" in
	y|Y) /sbin/upgradepkg --install-new --reinstall $PRGNAM-$VERSION-$ARCH-$BUILD$TAG.txz ;;
esac; exit 0
